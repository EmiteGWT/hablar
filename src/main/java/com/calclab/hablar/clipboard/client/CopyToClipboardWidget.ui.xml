<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<g:HTMLPanel addStyleNames="hablar-CopyToClipboardWidget">
		<div class="form">
			<h2>
				<span><ui:msg key="copyConversationToClipboard">Copy conversation to clipboard</ui:msg></span>
			</h2>
			<p>
			<label><ui:msg key="useYourBrowser">Use your browser's copy command to place this text into the clipboard</ui:msg></label>
				<g:TextArea ui:field="content" />
			</p>
			<div class="actions hablar-topDefaultBordered">
				<g:Button ui:field="accept"><ui:msg key="copyToClipboardAction">Copy to clipboard</ui:msg></g:Button>
				<g:Button ui:field="cancel"><ui:msg key="closeAction">Close</ui:msg></g:Button>
			</div>
		</div>
	</g:HTMLPanel>
</ui:UiBinder>