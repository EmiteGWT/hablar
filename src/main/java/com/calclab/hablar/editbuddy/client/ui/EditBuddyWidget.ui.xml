<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<g:HTMLPanel addStyleNames="hablar-EditBuddyWidget">
		<div class="form">
			<h2>
				<span><ui:msg key="changeBuddyNickname">Change buddy nickname</ui:msg></span>
			</h2>
			<p>
				<label><ui:msg key="changeFromLabelText">Change from:</ui:msg></label>
				<g:Label ui:field="oldNickName" />
			</p>
			<p>
				<label><ui:msg key="changeToLabelText">Change to:</ui:msg></label>
				<g:TextBox ui:field="nickName" />
				<g:Label ui:field="nickNameError" addStyleNames="hablar-errorColor" />
			</p>
			<div class="actions hablar-topDefaultBordered">
				<g:Button ui:field="save"><ui:msg key="saveAction">Save</ui:msg></g:Button>
				<g:Button ui:field="cancel"><ui:msg key="cancelAction">Cancel</ui:msg></g:Button>
			</div>
		</div>
	</g:HTMLPanel>
</ui:UiBinder>