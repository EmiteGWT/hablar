<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.slightlyPadded {
    		padding: 3px;
		}

	</ui:style>
	<g:LayoutPanel addStyleNames="hablar-Login hablar-lightBackground">
		<g:layer top="3px" bottom="3px" left="3px" right="3px">
			<g:DockLayoutPanel unit="EM">
				<g:north size="10">
					<g:HTMLPanel addStyleNames="form">
						<p>
							<label><ui:msg key="userLabel">User:</ui:msg></label>
							<g:TextBox ui:field="user" />
						</p>
						<p>
							<label><ui:msg key="passwordLabel">Password:</ui:msg></label>
							<g:PasswordTextBox ui:field="password" />
						</p>
						<div addStyleNames="actions">
							<g:Button ui:field="button"><ui:msg key="login">Login</ui:msg></g:Button>
						</div>
					</g:HTMLPanel>
				</g:north>
				<g:center>
					<g:FlowPanel ui:field="output" addStyleNames="hablar-clearBackground hablar-partialDarkBordered {style.slightlyPadded}"></g:FlowPanel>
				</g:center>
			</g:DockLayoutPanel>
		</g:layer>
	</g:LayoutPanel>
</ui:UiBinder>