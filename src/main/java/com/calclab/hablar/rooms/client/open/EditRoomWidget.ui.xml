<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
  xmlns:g="urn:import:com.google.gwt.user.client.ui"
  xmlns:hs="urn:import:com.calclab.hablar.core.client.ui.selectionlist">
  <ui:style>
	    .wideArea {
		    width: 100%;
		    height: 15em;
		    overflow: hidden;
	    }
  </ui:style>
  <g:ScrollPanel ui:field="scroll" addStyleNames="hablar-defaultBordered">
    <g:HTMLPanel addStyleNames="hablar-OpenRoomWidget">
      <div class="form">
        <h2>
          <span ui:field='title' />
        </h2>
        <p>
          <label><ui:msg key="groupChatNameLabelText">Group Chat Name:</ui:msg></label>
          <g:TextBox ui:field="roomName" />
          <g:Label ui:field="roomNameError" addStyleNames="hablar-errorColor" />
        </p>
        <p>
          <label><ui:msg key="invitationMessageLabelText">Invitation message:</ui:msg></label>
          <g:TextBox ui:field="message" />
        </p>
        <label><ui:msg key="occupantsLabelText">Group Chat Participants:</ui:msg></label>
		<p>
			<hs:DoubleList ui:field="selectionList" addStyleNames="{style.wideArea} hablar-clearBackground hablar-darkColor" />
		</p>
        <div class="actions hablar-topDefaultBordered">
          <g:Button ui:field="accept"><ui:msg key="acceptAction">Accept</ui:msg></g:Button>
          <g:Button ui:field="cancel"><ui:msg key="cancelAction">Cancel</ui:msg></g:Button>
        </div>
      </div>
    </g:HTMLPanel>
  </g:ScrollPanel>
</ui:UiBinder>