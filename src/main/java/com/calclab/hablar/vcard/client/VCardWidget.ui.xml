<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
	</ui:style>
	<g:HTMLPanel addStyleNames="hablar-VCardWidget">
		<h2 class="hablar-bottomLightBordered">
			<span ui:field='title' />
		</h2>
		<div class="loading" ui:field="loading">
			<g:Image ui:field="icon" addStyleNames="icon"  />
			<g:Label ui:field="loadingMessage"><ui:msg key="loadingMessage">Loading profile. Please wait...</ui:msg></g:Label>
		</div>
		<div class="form">
			<div ui:field="form">
				<p>
					<label><ui:msg key="nameLabelText">Name:</ui:msg></label>
					<g:TextBox ui:field="name" />
				</p>
				<p>
					<label><ui:msg key="nicknameLabelText">Nickname:</ui:msg></label>
					<g:TextBox ui:field="nickName" />
				</p>
				<p>
					<label><ui:msg key="familyNameLabelText">Family name:</ui:msg></label>
					<g:TextBox ui:field="familyName" />
				</p>
				<p>
					<label><ui:msg key="middleNameLabelText">Middle name:</ui:msg></label>
					<g:TextBox ui:field="middleName" />
				</p>
				<p>
					<label><ui:msg key="givenNameLabelText">Given name:</ui:msg></label>
					<g:TextBox ui:field="givenName" />
				</p>
				<p>
					<label><ui:msg key="organizationLabelText">Organization:</ui:msg></label>
					<g:TextBox ui:field="organizationName" />
				</p>
				<p>
					<label><ui:msg key="organizationUnitLabelText">Organization unit:</ui:msg></label>
					<g:TextBox ui:field="organizationUnit" />
				</p>
				<p>
					<label><ui:msg key="homepageLabelText">Homepage:</ui:msg></label>
					<g:TextBox ui:field="homepage" />
				</p>
				<p>
					<label><ui:msg key="emailLabelText">Email:</ui:msg></label>
					<g:TextBox ui:field="email" />
				</p>
			</div>
			<div class="actions hablar-topDefaultBordered">
				<g:Button ui:field="accept"><ui:msg key="acceptAction">Accept</ui:msg></g:Button>
				<g:Button ui:field="cancel"><ui:msg key="cancelAction">Cancel</ui:msg></g:Button>
			</div>
		</div>
	</g:HTMLPanel>

</ui:UiBinder>